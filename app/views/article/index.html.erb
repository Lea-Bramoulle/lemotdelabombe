  <!--================Blog Area =================-->
  <section class="blog_area area-padding">
      <div class="container">
          <div class="row">
              <div class="col-lg-8 mb-5 mb-lg-0">
                  <div class="blog_left_sidebar">


                    <%=@articles.each do |i| %>

                      <article class="blog_item">
                        <div class="blog_item_img">
                            <a href="<%=article_path(i)%>">
                              <%if i.avatar.attached?%>
                                <%= image_tag i.avatar, alt: 'avatar', style:"width:100%;height:26em;object-fit:cover;" %>
                              <%else%>
                                <%=image_tag "home.jpg", style:"width:100%;height:26em;object-fit:cover;"%>
                              <%end%>
                            </a>
                          <a href="#" class="blog_item_date">
                            <p><%=i.categorie.categorie_name%></p>
                          </a>
                        </div>

                        <div class="blog_details">
                            <a class="d-inline-block" href="<%=article_path(i)%>">
                                <h2><a href="<%=article_path(i)%>"><%=i.title%></a></h2>
                            </a>
                            <p><%=i.subject%></p>
                            <ul class="blog-info-link">
                              <li></li>
                              <li> <%=i.created_at.strftime("Le %m/%d/%Y")%></li>
                            </ul>
                        </div>
                      </article>

                    <%end%>



                  </div>

              </div>
              <div class="col-lg-4">
                  <div class="blog_right_sidebar">

                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Visages</h3>

                        <% @visages.each do |i|%>
                        <div class="media post_item">
                          <%if i.avatar.attached?%>
                            <%= image_tag i.avatar, alt: 'avatar', style:"width:7em;height:6em;object-fit:cover;" %>
                          <%else%>
                            <%=image_tag "home.jpg", style:"width:7em;height:6em;object-fit:cover;"%>
                          <%end%>
                            <div class="media-body">
                                <a href="<%=article_path(i)%>">
                                    <h3><%=i.title%></h3>
                                </a>
                                <p><%=i.created_at.strftime("Le %m/%d/%Y")%></p>
                            </div>
                        </div>
                        <%end%>

                    </aside>

                      <aside class="single_sidebar_widget popular_post_widget">
                          <h3 class="widget_title">Les Engag√©s</h3>

                          <% @engages.each do |i|%>
                          <div class="media post_item">
                            <%if i.avatar.attached?%>
                              <%= image_tag i.avatar, alt: 'avatar' , style:"width:7em;height:6em;object-fit:cover;"%>
                            <%else%>
                              <%=image_tag "home.jpg", style:"width:7em;height:6em;object-fit:cover;"%>
                            <%end%>
                              <div class="media-body">
                                  <a href="<%=article_path(i)%>">
                                      <h3><%=i.title%></h3>
                                  </a>
                                  <p><%=i.created_at.strftime("Le %m/%d/%Y")%></p>
                              </div>
                          </div>
                          <%end%>

                      </aside>


                      <aside class="single_sidebar_widget popular_post_widget">
                          <h3 class="widget_title">Les Experts</h3>

                          <% @experts.each do |i|%>
                          <div class="media post_item">
                            <%if i.avatar.attached?%>
                              <%= image_tag i.avatar, alt: 'avatar', style:"width:7em;height:6em;object-fit:cover;" %>
                            <%else%>
                              <%=image_tag "home.jpg", style:"width:7em;height:6em;object-fit:cover;"%>
                            <%end%>
                              <div class="media-body">
                                  <a href="single-blog.html">
                                      <h3><%=i.title%></h3>
                                  </a>
                                  <p><%=i.created_at.strftime("Le %m/%d/%Y")%></p>
                              </div>
                          </div>
                          <%end%>

                      </aside>


                  </div>
              </div>
          </div>
      </div>
  </section>
